{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020",
      "outDir": "out",
      "lib": ["ES2020"],
      "sourceMap": true,
      "rootDir": "src",
      "strict": false,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,  // This will skip type checking of declaration files
      "types": [
        "chai",
        "mocha"
      ]
    },
    "include": [
      "src/test/**/*"
    ],
    "exclude": [
      "node_modules",
      ".vscode-test"
    ]
  }
  